{
  "name": "validate-package-exports-action",
  "version": "0.0.1",
  "description": "Validate the exports of package.json files to ensure they exist, have valid syntax, and can be imported/required",
  "scripts": {
    "init-environment": "husky",
    "build": "tsup",
    "test": "vitest run --coverage",
    "check": "npx @biomejs/biome check --apply src tests"
  },
  "type": "module",
  "keywords": [
    "github",
    "action",
    "pr",
    "validate",
    "package",
    "exports"
  ],
  "author": {
    "name": "Andrea Amorosi",
    "email": "dreamorosi@gmail.com"
  },
  "license": "MIT-0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": "npm run lint-fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.0",
    "@types/node": "^20.11.25",
    "@vitest/coverage-v8": "^1.3.1",
    "esbuild": "^0.20.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "tsup": "^8.0.2",
    "typescript": "~5.4.2",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "execa": "^8.0.1",
    "validate-package-exports": "^0.2.1"
  }
}
